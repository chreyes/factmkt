<h1>Registro Usuario</h1>

<%= form_for @usuario do |f| %>
	<% if @usuario.errors.any? %>
		<div class="error_messages">
			<h2>Datos invalidos</h2>
				<ul>
					<% @usuario.errors.full_messages.each do |m| %>
						<li><%= m %></li>
					<% end %>
				</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :email %><br />
		<%= f.email_field :email %>
	</div>

	<div class="field">
		<%= f.label :password %><br />
		<%= f.password_field :password %>
	</div>

	<div class="field">
		<%= f.label :password_confirmation %><br />
		<%= f.password_field :password_confirmation %>
	</div>
	<div class="actions">
		<%= f.submit "Registrar" %>
	</div>
<% end %>

